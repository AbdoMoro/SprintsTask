<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross-Browser Testing" parallel="tests">
    <test name="Edge Test">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="search.searchTests" />
            <class name="placeOrder.placeOrderTests" />
            <class name="comparisonList.comparisonListTests" />
        </classes>
    </test>
    <test name="Chrome Test">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="search.searchTests" />
            <class name="placeOrder.placeOrderTests" />
            <class name="comparisonList.comparisonListTests" />
        </classes>
    </test>
</suite>
